<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">

    <!-- Иконка погоды -->
    <ImageView
        android:id="@+id/forecastIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="Weather Icon"/>

    <!-- Вертртикальный контейнер для текста -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"> <!-- Центрируем текстовые элементы по вертикали -->

        <!-- Дата -->
        <TextView
            android:id="@+id/forecastDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"/>

        <!-- Температура -->
        <TextView
            android:id="@+id/forecastTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textSize="14sp"/>

        <!-- Описание -->
        <TextView
            android:id="@+id/forecastDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
